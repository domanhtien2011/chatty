<%= render 'shared/errors', obj: @user %>

<h1>Edit Your Profile</h1>

<div class="edit-form">
  <%= form_for(@user, html: { multipart: true }) do |f| %>
    <div class="form-group">
      <%= f.text_field 'username', class: 'form-control', placeholder: 'Username' %>
    </div>
    <div class="form-group">
      <%= f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail' %>
    </div>
    <div class="form-group">
      <%= f.file_field 'image_url', accept: 'image/jpeg,image/gif, image/png',class: 'form-control', placeholder: 'Upload your image' %>
    </div>
    <div class="form-group">
      <div class="half-width">
        <%= f.password_field 'password', class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.password_field 'password_confirmation', class: 'form-control', placeholder: 'Confirmation' %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update Profile', class: 'btn btn-block btn-info' %>
    </div>
  <% end %>
</div>

